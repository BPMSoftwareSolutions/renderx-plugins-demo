{
  "version": "1.0.0",
  "layout": {
    "kind": "grid",
    "columns": ["320px", "1fr", "360px"],
    "rows": ["1fr"],
    "areas": [["library", "canvas", "controlPanel"]],
    "gap": { "column": "0", "row": "0" },
    "responsive": [
      {
        "media": "(max-width: 900px)",
        "columns": ["1fr"],
        "rows": ["auto", "1fr", "auto"],
        "areas": [["library"], ["canvas"], ["controlPanel"]]
      }
    ]
  },
  "slots": [
    {
      "name": "library",
      "constraints": { "minWidth": 280, "maxWidth": 360 },
      "className": "rx-slot-library"
    },
    {
      "name": "canvas",
      "constraints": { "minWidth": 480 },
      "className": "rx-slot-canvas"
    },
    {
      "name": "controlPanel",
      "constraints": { "minWidth": 320, "maxWidth": 420 },
      "className": "rx-slot-control"
    }
  ]
}
