<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Diagnostics.EventLog"
             Background="{DynamicResource Color.Background.Primary}">
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <StackPanel Spacing="8">
                <TextBlock Text="Event Log"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Grid.Column="0"
                             x:Name="FilterBox"
                             Watermark="Filter events..."
                             FontSize="10"
                             Padding="6,4"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource Color.Border.Secondary}" />
                    <Button Grid.Column="1"
                            Content="Clear"
                            Margin="8,0,0,0"
                            Padding="8,4"
                            Background="{DynamicResource Color.Border.Primary}"
                            Foreground="{DynamicResource Color.Border.Primary}"
                            FontSize="10"
                            Click="OnClearClick" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Log Entries -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="LogItemsControl"
                          Padding="12"
                          Background="{DynamicResource Color.Background.Primary}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent"
                                BorderThickness="0,0,0,1"
                                BorderBrush="{DynamicResource Color.Border.Primary}"
                                Padding="0,8">
                            <StackPanel Spacing="2">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock x:Name="LevelIcon"
                                               Text="â„¹"
                                               FontSize="10"
                                               Foreground="{DynamicResource Color.Accent.Primary}" />
                                    <TextBlock Text="{Binding Timestamp}"
                                               FontSize="9"
                                               Foreground="#999" />
                                    <TextBlock Text="{Binding Level}"
                                               FontSize="9"
                                               FontWeight="Bold"
                                               Foreground="#666" />
                                </StackPanel>
                                <TextBlock Text="{Binding Message}"
                                           FontSize="10"
                                           Foreground="{DynamicResource Color.Border.Primary}"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <TextBlock x:Name="EntryCountText"
                       Text="0 entries"
                       FontSize="10"
                       Foreground="#666" />
        </Border>
    </Grid>
</UserControl>

