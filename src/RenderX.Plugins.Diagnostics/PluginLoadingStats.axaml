<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Diagnostics.PluginLoadingStats"
             Background="Transparent">
    <Border Background="#F9F9F9"
            BorderThickness="1"
            BorderBrush="#E0E0E0"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="8">
            <TextBlock Text="Loading Statistics"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="#333" />
            
            <Grid ColumnDefinitions="*,*,*,*">
                <!-- Success -->
                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="✓ Success" FontSize="10" Foreground="#10b981" FontWeight="Bold" />
                    <TextBlock x:Name="SuccessCount" Text="0" FontSize="14" FontWeight="Bold" Foreground="#10b981" />
                </StackPanel>
                
                <!-- Failed -->
                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="✗ Failed" FontSize="10" Foreground="#EF5350" FontWeight="Bold" />
                    <TextBlock x:Name="FailedCount" Text="0" FontSize="14" FontWeight="Bold" Foreground="#EF5350" />
                </StackPanel>
                
                <!-- Pending -->
                <StackPanel Grid.Column="2" Spacing="4">
                    <TextBlock Text="⏳ Pending" FontSize="10" Foreground="#FFA726" FontWeight="Bold" />
                    <TextBlock x:Name="PendingCount" Text="0" FontSize="14" FontWeight="Bold" Foreground="#FFA726" />
                </StackPanel>
                
                <!-- Total Time -->
                <StackPanel Grid.Column="3" Spacing="4">
                    <TextBlock Text="⏱ Time" FontSize="10" Foreground="#666" FontWeight="Bold" />
                    <TextBlock x:Name="TotalTime" Text="0ms" FontSize="14" FontWeight="Bold" Foreground="#333" />
                </StackPanel>
            </Grid>

            <!-- Progress Bar -->
            <ProgressBar x:Name="LoadingProgress"
                         IsIndeterminate="False"
                         Height="4"
                         Background="#E0E0E0"
                         Foreground="#007ACC" />
        </StackPanel>
    </Border>
</UserControl>

