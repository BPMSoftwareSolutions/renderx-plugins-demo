<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Diagnostics.PluginDetail"
             Background="{DynamicResource Color.Background.Primary}">
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource Color.Border.Primary}"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="12">
            <!-- Plugin Name -->
            <StackPanel Spacing="4">
                <TextBlock Text="Plugin Name"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="#666" />
                <TextBlock x:Name="PluginName"
                           Text="Unknown"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
            </StackPanel>

            <!-- Status -->
            <StackPanel Spacing="4">
                <TextBlock Text="Status"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="#666" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse x:Name="StatusDot"
                             Width="10" Height="10"
                             Fill="#10b981" />
                    <TextBlock x:Name="StatusText"
                               Text="Loaded"
                               FontSize="11"
                               Foreground="{DynamicResource Color.Border.Primary}" />
                </StackPanel>
            </StackPanel>

            <!-- Version -->
            <StackPanel Spacing="4">
                <TextBlock Text="Version"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="#666" />
                <TextBlock x:Name="VersionText"
                           Text="1.0.0"
                           FontSize="11"
                           Foreground="{DynamicResource Color.Border.Primary}" />
            </StackPanel>

            <!-- Load Time -->
            <StackPanel Spacing="4">
                <TextBlock Text="Load Time"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="#666" />
                <TextBlock x:Name="LoadTimeText"
                           Text="0ms"
                           FontSize="11"
                           Foreground="{DynamicResource Color.Border.Primary}" />
            </StackPanel>

            <!-- Error Message (if any) -->
            <Border x:Name="ErrorBorder"
                    Background="#FFEBEE"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource Color.Error}"
                    CornerRadius="4"
                    Padding="8"
                    IsVisible="False">
                <StackPanel Spacing="4">
                    <TextBlock Text="Error"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="{DynamicResource Color.Error}" />
                    <TextBlock x:Name="ErrorText"
                               Text="Error message"
                               FontSize="10"
                               Foreground="{DynamicResource Color.Error}"
                               TextWrapping="Wrap" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</UserControl>

