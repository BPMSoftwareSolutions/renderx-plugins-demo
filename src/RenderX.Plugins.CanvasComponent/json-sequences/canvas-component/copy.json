{
  "pluginId": "CanvasComponentCopyPlugin",
  "id": "canvas-component-copy-symphony",
  "name": "Canvas Component Copy",
  "topicMapping": {
    "routeToBase": true
  },
  "movements": [
    {
      "id": "copy-to-clipboard",
      "name": "Copy to Clipboard",
      "beats": [
        {
          "beat": 1,
          "event": "canvas:component:copy:serialize",
          "title": "Serialize Component Data",
          "dynamics": "mf",
          "handler": "serializeSelectedComponent",
          "timing": "immediate",
          "kind": "pure",
          "handlerDef": {
            "id": "canvas-component-copy-symphony.serializeselectedcomponent.0",
            "scope": "plugin",
            "kind": "plugin"
          }
        },
        {
          "beat": 2,
          "event": "canvas:component:copy:clipboard",
          "title": "Copy to Clipboard",
          "dynamics": "mf",
          "handler": "copyToClipboard",
          "timing": "immediate",
          "kind": "io",
          "handlerDef": {
            "id": "canvas-component-copy-symphony.copytoclipboard.1",
            "scope": "plugin",
            "kind": "plugin"
          }
        },
        {
          "beat": 3,
          "event": "canvas:component:copy:notify",
          "title": "Notify Copy Complete",
          "dynamics": "mf",
          "handler": "notifyCopyComplete",
          "timing": "immediate",
          "kind": "pure",
          "handlerDef": {
            "id": "canvas-component-copy-symphony.notifycopycomplete.2",
            "scope": "plugin",
            "kind": "plugin"
          }
        }
      ]
    }
  ]
}
