<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.ManifestTools.ManifestEditor"
             Background="{DynamicResource Color.Background.Primary}">
    <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,*">
        <!-- Sidebar -->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <StackPanel Spacing="12">
                <TextBlock Text="Manifest Sections"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
                <ItemsControl x:Name="SectionsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    Padding="8,6"
                                    Background="Transparent"
                                    Foreground="{DynamicResource Color.Border.Primary}"
                                    FontSize="11"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
        
        <!-- Header -->
        <Border Grid.Row="0" Grid.Column="1"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <StackPanel Spacing="8">
                <TextBlock x:Name="SectionTitle"
                           Text="Manifest Editor"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Save"
                            Padding="8,4"
                            Background="{DynamicResource Color.Accent.Primary}"
                            Foreground="{DynamicResource Color.Background.Primary}"
                            FontSize="10" />
                    <Button Content="Revert"
                            Padding="8,4"
                            Background="{DynamicResource Color.Border.Primary}"
                            Foreground="{DynamicResource Color.Border.Primary}"
                            FontSize="10" />
                </StackPanel>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <StackPanel Padding="12" Spacing="12">
                <StackPanel Spacing="4">
                    <TextBlock Text="Name"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBox x:Name="NameBox"
                             Watermark="Enter name..."
                             FontSize="11"
                             Padding="6,4"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource Color.Border.Secondary}" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Version"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBox x:Name="VersionBox"
                             Watermark="1.0.0"
                             FontSize="11"
                             Padding="6,4"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource Color.Border.Secondary}" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Description"
                               FontSize="11"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBox x:Name="DescriptionBox"
                             Watermark="Enter description..."
                             FontSize="11"
                             Padding="6,4"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource Color.Border.Secondary}"
                             Height="80"
                             AcceptsReturn="True"
                             TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

