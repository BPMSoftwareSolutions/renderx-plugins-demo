<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.DigitalAssets.AssetPreview"
             Background="{DynamicResource Color.Background.Primary}">
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource Color.Border.Primary}"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="12">
            <!-- Preview Area -->
            <Border Background="{DynamicResource Color.Background.Tertiary}"
                    CornerRadius="4"
                    Height="200"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource Color.Border.Primary}">
                <TextBlock Text="ðŸ“„"
                           FontSize="64"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource Color.Border.Secondary}" />
            </Border>
            
            <!-- Asset Info -->
            <StackPanel Spacing="8">
                <StackPanel Spacing="4">
                    <TextBlock Text="Name"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetName"
                               Text="asset.jpg"
                               FontSize="12"
                               Foreground="{DynamicResource Color.Border.Primary}" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Type"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetType"
                               Text="Image"
                               FontSize="12"
                               Foreground="{DynamicResource Color.Border.Primary}" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Size"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetSize"
                               Text="2.5 MB"
                               FontSize="12"
                               Foreground="{DynamicResource Color.Border.Primary}" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Dimensions"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetDimensions"
                               Text="1920 x 1080"
                               FontSize="12"
                               Foreground="{DynamicResource Color.Border.Primary}" />
                </StackPanel>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Download"
                        Padding="8,4"
                        Background="{DynamicResource Color.Accent.Primary}"
                        Foreground="{DynamicResource Color.Background.Primary}"
                        FontSize="10"
                        HorizontalAlignment="Stretch" />
                <Button Content="Delete"
                        Padding="8,4"
                        Background="{DynamicResource Color.Error}"
                        Foreground="{DynamicResource Color.Background.Primary}"
                        FontSize="10"
                        HorizontalAlignment="Stretch" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

