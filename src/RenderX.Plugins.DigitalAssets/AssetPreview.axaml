<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.DigitalAssets.AssetPreview"
             Background="White">
    <Border BorderThickness="1"
            BorderBrush="#E0E0E0"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="12">
            <!-- Preview Area -->
            <Border Background="#F5F5F5"
                    CornerRadius="4"
                    Height="200"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0">
                <TextBlock Text="ðŸ“„"
                           FontSize="64"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Foreground="#D0D0D0" />
            </Border>
            
            <!-- Asset Info -->
            <StackPanel Spacing="8">
                <StackPanel Spacing="4">
                    <TextBlock Text="Name"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetName"
                               Text="asset.jpg"
                               FontSize="12"
                               Foreground="#333" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Type"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetType"
                               Text="Image"
                               FontSize="12"
                               Foreground="#333" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Size"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetSize"
                               Text="2.5 MB"
                               FontSize="12"
                               Foreground="#333" />
                </StackPanel>
                
                <StackPanel Spacing="4">
                    <TextBlock Text="Dimensions"
                               FontSize="10"
                               FontWeight="Bold"
                               Foreground="#666" />
                    <TextBlock x:Name="AssetDimensions"
                               Text="1920 x 1080"
                               FontSize="12"
                               Foreground="#333" />
                </StackPanel>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Download"
                        Padding="8,4"
                        Background="#007ACC"
                        Foreground="White"
                        FontSize="10"
                        HorizontalAlignment="Stretch" />
                <Button Content="Delete"
                        Padding="8,4"
                        Background="#EF5350"
                        Foreground="White"
                        FontSize="10"
                        HorizontalAlignment="Stretch" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

