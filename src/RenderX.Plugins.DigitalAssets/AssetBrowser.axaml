<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.DigitalAssets.AssetBrowser"
             Background="White">
    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="#F5F5F5"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0"
                Padding="12">
            <StackPanel Spacing="8">
                <TextBlock Text="Asset Browser"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#333" />
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Grid.Column="0"
                             x:Name="SearchBox"
                             Watermark="Search assets..."
                             FontSize="11"
                             Padding="6,4"
                             BorderThickness="1"
                             BorderBrush="#D0D0D0" />
                    <ComboBox Grid.Column="1"
                              Margin="8,0,0,0"
                              Width="120"
                              SelectedIndex="0">
                        <ComboBoxItem>All Types</ComboBoxItem>
                        <ComboBoxItem>Images</ComboBoxItem>
                        <ComboBoxItem>Icons</ComboBoxItem>
                        <ComboBoxItem>Videos</ComboBoxItem>
                        <ComboBoxItem>Documents</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Asset Grid -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="AssetsItemsControl"
                          Padding="12"
                          Background="White">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Spacing="12" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#F9F9F9"
                                BorderThickness="1"
                                BorderBrush="#E0E0E0"
                                CornerRadius="4"
                                Padding="8"
                                Width="120"
                                Height="140">
                            <StackPanel Spacing="8">
                                <Border Background="#E0E0E0"
                                        CornerRadius="2"
                                        Height="80">
                                    <TextBlock Text="ðŸ“"
                                               FontSize="32"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Border>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="10"
                                           Foreground="#333"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis" />
                                <TextBlock Text="{Binding Size}"
                                           FontSize="9"
                                           Foreground="#999" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

