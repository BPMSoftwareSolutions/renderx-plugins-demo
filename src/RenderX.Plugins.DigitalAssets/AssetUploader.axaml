<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.DigitalAssets.AssetUploader"
             Background="White">
    <Border BorderThickness="1"
            BorderBrush="#E0E0E0"
            CornerRadius="4"
            Padding="24">
        <StackPanel Spacing="16">
            <TextBlock Text="Upload Assets"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#333" />
            
            <!-- Drop Zone -->
            <Border Background="#F9F9F9"
                    BorderThickness="2"
                    BorderBrush="#D0D0D0"
                    CornerRadius="4"
                    Padding="32"
                    x:Name="DropZone">
                <StackPanel Spacing="8" HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“¤"
                               FontSize="32"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Drag and drop files here"
                               FontSize="12"
                               Foreground="#333"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="or"
                               FontSize="11"
                               Foreground="#999"
                               HorizontalAlignment="Center" />
                    <Button Content="Browse Files"
                            Padding="12,6"
                            Background="#007ACC"
                            Foreground="White"
                            FontSize="11"
                            HorizontalAlignment="Center" />
                </StackPanel>
            </Border>
            
            <!-- File Types -->
            <StackPanel Spacing="4">
                <TextBlock Text="Supported file types:"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="#666" />
                <TextBlock Text="Images: JPG, PNG, GIF, SVG, WebP"
                           FontSize="10"
                           Foreground="#999" />
                <TextBlock Text="Videos: MP4, WebM, OGG"
                           FontSize="10"
                           Foreground="#999" />
                <TextBlock Text="Documents: PDF, DOC, DOCX"
                           FontSize="10"
                           Foreground="#999" />
            </StackPanel>
            
            <!-- Upload Progress -->
            <StackPanel x:Name="ProgressPanel" Spacing="8" IsVisible="False">
                <TextBlock Text="Uploading..."
                           FontSize="11"
                           Foreground="#333" />
                <ProgressBar x:Name="UploadProgress"
                             Value="0"
                             Maximum="100"
                             Height="4"
                             Background="#E0E0E0"
                             Foreground="#007ACC" />
                <TextBlock x:Name="ProgressText"
                           Text="0%"
                           FontSize="10"
                           Foreground="#666" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

