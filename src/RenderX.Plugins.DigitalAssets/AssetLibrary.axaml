<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.DigitalAssets.AssetLibrary"
             Background="{DynamicResource Color.Background.Primary}">
    <Grid ColumnDefinitions="200,*" RowDefinitions="Auto,*">
        <!-- Sidebar -->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,0,1,0"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <StackPanel Spacing="12">
                <TextBlock Text="Collections"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
                <ItemsControl x:Name="CollectionsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding Name}"
                                    Padding="8,6"
                                    Background="Transparent"
                                    Foreground="{DynamicResource Color.Border.Primary}"
                                    FontSize="11"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Left" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
        
        <!-- Header -->
        <Border Grid.Row="0" Grid.Column="1"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <StackPanel Spacing="8">
                <TextBlock x:Name="CollectionTitle"
                           Text="All Assets"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
                <TextBox Watermark="Search assets..."
                         FontSize="11"
                         Padding="6,4"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource Color.Border.Secondary}" />
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <ScrollViewer Grid.Row="1" Grid.Column="1">
            <ItemsControl x:Name="AssetsControl"
                          Padding="12"
                          Background="{DynamicResource Color.Background.Primary}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Spacing="12" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource Color.Background.Secondary}"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource Color.Border.Primary}"
                                CornerRadius="4"
                                Padding="8"
                                Width="100"
                                Height="120">
                            <StackPanel Spacing="8">
                                <Border Background="{DynamicResource Color.Border.Primary}"
                                        CornerRadius="2"
                                        Height="70">
                                    <TextBlock Text="ðŸ“"
                                               FontSize="24"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center" />
                                </Border>
                                <TextBlock Text="{Binding Name}"
                                           FontSize="9"
                                           Foreground="{DynamicResource Color.Border.Primary}"
                                           TextWrapping="Wrap"
                                           TextTrimming="CharacterEllipsis" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>

