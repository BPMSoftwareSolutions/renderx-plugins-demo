<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="500"
             x:Class="RenderX.Plugins.Canvas.CanvasLayerPanel">
    
    <!-- Canvas Layer Panel - Layer management UI matching web functionality -->
    
    <Border Background="{DynamicResource Bg.Primary}"
            BorderBrush="{DynamicResource Border.Primary}"
            BorderThickness="1"
            CornerRadius="8"
            Classes="card shadow">
        
        <Grid RowDefinitions="Auto,*,Auto">
            
            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource Gray.50}"
                    BorderBrush="{DynamicResource Border.Primary}"
                    BorderThickness="0,0,0,1"
                    Padding="12,8">
                
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Text="Layers"
                              FontWeight="SemiBold"
                              FontSize="14"
                              VerticalAlignment="Center"/>
                    
                    <StackPanel Grid.Column="1"
                               Orientation="Horizontal"
                               Spacing="4">
                        
                        <!-- Add Layer Button -->
                        <Button Content="+"
                                Classes="rx-button"
                                Width="28"
                                Height="28"
                                Padding="0"
                                ToolTip.Tip="Add Layer"
                                x:Name="AddLayerButton"/>
                        
                        <!-- Delete Layer Button -->
                        <Button Content="âˆ’"
                                Classes="rx-button"
                                Width="28"
                                Height="28"
                                Padding="0"
                                ToolTip.Tip="Delete Selected Layer"
                                x:Name="DeleteLayerButton"/>
                        
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Layer List -->
            <ScrollViewer Grid.Row="1"
                         HorizontalScrollBarVisibility="Disabled"
                         VerticalScrollBarVisibility="Auto">
                
                <ItemsControl x:Name="LayerList"
                             Margin="4">
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Layer Item -->
                            <Border Background="{DynamicResource Bg.Primary}"
                                   BorderBrush="{DynamicResource Border.Primary}"
                                   BorderThickness="1"
                                   CornerRadius="4"
                                   Padding="8"
                                   Margin="0,2"
                                   Classes="card-flat transition-all">
                                
                                <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                    
                                    <!-- Visibility Toggle -->
                                    <CheckBox Grid.Column="0"
                                            IsChecked="{Binding IsVisible}"
                                            ToolTip.Tip="Toggle Visibility"
                                            Margin="0,0,8,0"/>
                                    
                                    <!-- Layer Name -->
                                    <TextBlock Grid.Column="1"
                                              Text="{Binding Name}"
                                              VerticalAlignment="Center"
                                              Classes="body"/>
                                    
                                    <!-- Lock Toggle -->
                                    <CheckBox Grid.Column="2"
                                            IsChecked="{Binding IsLocked}"
                                            ToolTip.Tip="Lock Layer"
                                            Margin="8,0">
                                        <CheckBox.Content>
                                            <TextBlock Text="ðŸ”’" FontSize="12"/>
                                        </CheckBox.Content>
                                    </CheckBox>
                                    
                                    <!-- Opacity Slider -->
                                    <Border Grid.Column="3"
                                           Width="60"
                                           Margin="8,0,0,0">
                                        <Slider Value="{Binding Opacity}"
                                               Minimum="0"
                                               Maximum="100"
                                               ToolTip.Tip="Opacity"/>
                                    </Border>
                                    
                                </Grid>
                                
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    
                </ItemsControl>
                
            </ScrollViewer>
            
            <!-- Footer - Layer Actions -->
            <Border Grid.Row="2"
                    Background="{DynamicResource Gray.50}"
                    BorderBrush="{DynamicResource Border.Primary}"
                    BorderThickness="0,1,0,0"
                    Padding="12,8">
                
                <StackPanel Orientation="Horizontal"
                           HorizontalAlignment="Center"
                           Spacing="8">
                    
                    <!-- Merge Down -->
                    <Button Content="Merge Down"
                            Classes="rx-button"
                            Padding="8,4"
                            FontSize="11"
                            x:Name="MergeDownButton"/>
                    
                    <!-- Duplicate -->
                    <Button Content="Duplicate"
                            Classes="rx-button"
                            Padding="8,4"
                            FontSize="11"
                            x:Name="DuplicateButton"/>
                    
                    <!-- Move Up -->
                    <Button Content="â†‘"
                            Classes="rx-button"
                            Width="28"
                            Height="28"
                            Padding="0"
                            ToolTip.Tip="Move Layer Up"
                            x:Name="MoveUpButton"/>
                    
                    <!-- Move Down -->
                    <Button Content="â†“"
                            Classes="rx-button"
                            Width="28"
                            Height="28"
                            Padding="0"
                            ToolTip.Tip="Move Layer Down"
                            x:Name="MoveDownButton"/>
                    
                </StackPanel>
                
            </Border>
            
        </Grid>
        
    </Border>
    
</UserControl>
