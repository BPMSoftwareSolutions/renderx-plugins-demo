<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Canvas.SelectionIndicator"
             Background="Transparent">
    <Border x:Name="SelectionBorder"
            BorderThickness="2"
            BorderBrush="{DynamicResource Color.Accent.Primary}"
            Background="Transparent"
            IsVisible="False">
        <Grid>
            <!-- Corner handles -->
            <Ellipse x:Name="TopLeftHandle"
                     Width="8" Height="8"
                     Fill="#007ACC"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Margin="-4,-4,0,0" />
            <Ellipse x:Name="TopRightHandle"
                     Width="8" Height="8"
                     Fill="#007ACC"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="0,-4,-4,0" />
            <Ellipse x:Name="BottomLeftHandle"
                     Width="8" Height="8"
                     Fill="#007ACC"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Bottom"
                     Margin="-4,0,0,-4" />
            <Ellipse x:Name="BottomRightHandle"
                     Width="8" Height="8"
                     Fill="#007ACC"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Bottom"
                     Margin="0,0,-4,-4" />
        </Grid>
    </Border>
</UserControl>

