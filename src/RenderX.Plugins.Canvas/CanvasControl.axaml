<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RenderX.Plugins.Canvas"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="RenderX.Plugins.Canvas.CanvasControl"
             x:CompileBindings="False"
             Background="White"
             BorderThickness="1"
             BorderBrush="#E0E0E0">

    <Grid RowDefinitions="Auto,*">
        <!-- Canvas Header -->
        <Border Grid.Row="0"
                Background="#F5F5F5"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0"
                Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Canvas"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock Name="ComponentCountText"
                           Text="(0 components)"
                           FontSize="12"
                           Foreground="Gray"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Canvas Content Area -->
        <Border Grid.Row="1"
                Background="White"
                Padding="12">
            <Grid RowDefinitions="*,Auto">
                <!-- Components ItemsControl -->
                <ItemsControl Grid.Row="0"
                              Name="ComponentsItemsControl"
                              Background="White"
                              BorderThickness="1"
                              BorderBrush="#E0E0E0"
                              Padding="8">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas Background="White" 
                                    Name="rxCanvas"
                                    AutomationProperties.AutomationId="rx-canvas"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Name="ComponentItem"
                                    Background="White"
                                    BorderThickness="2"
                                    BorderBrush="#2196F3"
                                    CornerRadius="4"
                                    Padding="8"
                                    Margin="4"
                                    PointerPressed="OnComponentPointerPressed"
                                    PointerReleased="OnComponentPointerReleased"
                                    PointerMoved="OnComponentPointerMoved">
                                <StackPanel Spacing="4">
                                    <TextBlock Name="ComponentNameText"
                                               FontSize="12"
                                               FontWeight="Bold"
                                               Text="{Binding Name}"/>
                                    <TextBlock Name="ComponentIdText"
                                               FontSize="10"
                                               Foreground="Gray"
                                               Text="{Binding Id}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Status Bar -->
                <Border Grid.Row="1"
                        Background="#F5F5F5"
                        BorderThickness="0,1,0,0"
                        BorderBrush="#E0E0E0"
                        Padding="8"
                        Margin="0,8,0,0">
                    <TextBlock Name="StatusText"
                               Text="Ready"
                               FontSize="11"
                               Foreground="Gray"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>

