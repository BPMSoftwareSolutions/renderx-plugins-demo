<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.MusicalConductor.EventBusMonitor"
             Background="{DynamicResource Color.Background.Primary}">
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,0,0,1"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <StackPanel Spacing="8">
                <TextBlock Text="Event Bus Monitor"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
                <Grid ColumnDefinitions="*,Auto">
                    <TextBox Grid.Column="0"
                             Watermark="Filter events..."
                             FontSize="11"
                             Padding="6,4"
                             BorderThickness="1"
                             BorderBrush="{DynamicResource Color.Border.Secondary}" />
                    <Button Grid.Column="1"
                            Content="Clear"
                            Margin="8,0,0,0"
                            Padding="8,4"
                            Background="{DynamicResource Color.Border.Primary}"
                            Foreground="{DynamicResource Color.Border.Primary}"
                            FontSize="10" />
                </Grid>
            </StackPanel>
        </Border>

        <!-- Events List -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="EventsControl"
                          Padding="12"
                          Background="{DynamicResource Color.Background.Primary}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource Color.Background.Secondary}"
                                BorderThickness="1"
                                BorderBrush="{DynamicResource Color.Border.Primary}"
                                CornerRadius="4"
                                Padding="8"
                                Margin="0,4">
                            <StackPanel Spacing="4">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding Timestamp}"
                                               FontSize="9"
                                               Foreground="#999" />
                                    <TextBlock Text="{Binding Topic}"
                                               FontSize="11"
                                               FontWeight="Bold"
                                               Foreground="{DynamicResource Color.Border.Primary}" />
                                </StackPanel>
                                <TextBlock Text="{Binding Payload}"
                                           FontSize="10"
                                           Foreground="#666"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource Color.Background.Tertiary}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <TextBlock x:Name="EventCountText"
                       Text="0 events"
                       FontSize="10"
                       Foreground="#666" />
        </Border>
    </Grid>
</UserControl>

