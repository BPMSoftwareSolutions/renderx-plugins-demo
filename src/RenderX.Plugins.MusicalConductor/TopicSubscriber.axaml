<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.MusicalConductor.TopicSubscriber"
             Background="White">
    <Border BorderThickness="1"
            BorderBrush="#E0E0E0"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="12">
            <TextBlock Text="Topic Subscriber"
                       FontSize="12"
                       FontWeight="Bold"
                       Foreground="#333" />
            
            <!-- Topic Selection -->
            <StackPanel Spacing="4">
                <TextBlock Text="Select Topic"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="#666" />
                <ComboBox x:Name="TopicComboBox"
                          FontSize="11"
                          Padding="6,4">
                    <ComboBoxItem>Select a topic...</ComboBoxItem>
                </ComboBox>
            </StackPanel>
            
            <!-- Subscription Status -->
            <StackPanel Spacing="4">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Ellipse x:Name="StatusDot"
                             Width="10" Height="10"
                             Fill="#999" />
                    <TextBlock x:Name="StatusText"
                               Text="Not subscribed"
                               FontSize="11"
                               Foreground="#666" />
                </StackPanel>
            </StackPanel>
            
            <!-- Received Messages -->
            <StackPanel Spacing="4">
                <TextBlock Text="Received Messages"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="#666" />
                <ItemsControl x:Name="MessagesControl"
                              Background="Transparent"
                              MaxHeight="150">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#F5F5F5"
                                    BorderThickness="1"
                                    BorderBrush="#E0E0E0"
                                    CornerRadius="2"
                                    Padding="6"
                                    Margin="0,2">
                                <TextBlock Text="{Binding Message}"
                                           FontSize="9"
                                           Foreground="#333"
                                           TextWrapping="Wrap" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            
            <!-- Actions -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Subscribe"
                        Padding="8,4"
                        Background="#007ACC"
                        Foreground="White"
                        FontSize="10" />
                <Button Content="Unsubscribe"
                        Padding="8,4"
                        Background="#E0E0E0"
                        Foreground="#333"
                        FontSize="10" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

