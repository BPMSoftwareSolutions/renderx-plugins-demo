<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:RenderX.Shell.Avalonia.UI.ViewModels"
        xmlns:views="using:RenderX.Shell.Avalonia.UI.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="RenderX.Shell.Avalonia.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="RenderX Shell"
        WindowStartupLocation="CenterScreen"
        MinWidth="800"
        MinHeight="600">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <!-- Thin host: 6 slots (3 header + 3 main) defined in layout-manifest.json -->
    <Grid RowDefinitions="48,*" ColumnDefinitions="320,*,360">

        <!-- Header Row (48px) -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                Name="HeaderArea"
                AutomationProperties.AutomationId="HeaderArea"
                Background="#F5F5F5"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0">
            <Grid ColumnDefinitions="320,*,360">
                <!-- Header Left Slot -->
                <Border Grid.Column="0" Name="HeaderLeft" AutomationProperties.AutomationId="HeaderLeft" />
                <!-- Header Center Slot -->
                <Border Grid.Column="1" Name="HeaderCenter" AutomationProperties.AutomationId="HeaderCenter" />
                <!-- Header Right Slot -->
                <Border Grid.Column="2" Name="HeaderRight" AutomationProperties.AutomationId="HeaderRight" />
            </Grid>
        </Border>

        <!-- Main Content Row -->
        <!-- Library Slot (320px) -->
        <Border Grid.Row="1" Grid.Column="0" Name="Library" AutomationProperties.AutomationId="Library" />

        <!-- Canvas Slot (1fr) -->
        <Border Grid.Row="1" Grid.Column="1" Name="Canvas" AutomationProperties.AutomationId="Canvas" />

        <!-- Control Panel Slot (360px) -->
        <Border Grid.Row="1" Grid.Column="2" Name="ControlPanel" AutomationProperties.AutomationId="ControlPanel" />
    </Grid>
</Window>
