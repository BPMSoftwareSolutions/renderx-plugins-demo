<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Shadow Effects -->
    <DropShadowEffect x:Key="ShadowSmall"
                      BlurRadius="4"
                      OffsetX="0"
                      OffsetY="2"
                      Opacity="0.1"
                      Color="#000000" />
    
    <DropShadowEffect x:Key="ShadowMedium"
                      BlurRadius="8"
                      OffsetX="0"
                      OffsetY="4"
                      Opacity="0.15"
                      Color="#000000" />
    
    <DropShadowEffect x:Key="ShadowLarge"
                      BlurRadius="16"
                      OffsetX="0"
                      OffsetY="8"
                      Opacity="0.2"
                      Color="#000000" />
    
    <DropShadowEffect x:Key="ShadowXLarge"
                      BlurRadius="24"
                      OffsetX="0"
                      OffsetY="12"
                      Opacity="0.25"
                      Color="#000000" />
    
    <!-- Transition Durations (in milliseconds) -->
    <x:Int32 x:Key="TransitionDurationFast">100</x:Int32>
    <x:Int32 x:Key="TransitionDurationBase">200</x:Int32>
    <x:Int32 x:Key="TransitionDurationSlow">300</x:Int32>
    <x:Int32 x:Key="TransitionDurationSlower">500</x:Int32>
    
    <!-- Easing Functions -->
    <x:String x:Key="EasingLinear">Linear</x:String>
    <x:String x:Key="EasingEaseIn">EaseIn</x:String>
    <x:String x:Key="EasingEaseOut">EaseOut</x:String>
    <x:String x:Key="EasingEaseInOut">EaseInOut</x:String>
    
    <!-- Opacity Values -->
    <x:Double x:Key="OpacityDisabled">0.5</x:Double>
    <x:Double x:Key="OpacityHover">0.8</x:Double>
    <x:Double x:Key="OpacityActive">1.0</x:Double>
    <x:Double x:Key="OpacityFaded">0.6</x:Double>
    
    <!-- Blur Radius Values -->
    <x:Double x:Key="BlurRadiusSmall">2</x:Double>
    <x:Double x:Key="BlurRadiusMedium">4</x:Double>
    <x:Double x:Key="BlurRadiusLarge">8</x:Double>
    <x:Double x:Key="BlurRadiusXLarge">12</x:Double>
    
    <!-- Gradient Definitions -->
    <!-- Linear Gradients -->
    <LinearGradientBrush x:Key="GradientPrimaryToSecondary"
                         StartPoint="0%,0%"
                         EndPoint="100%,100%">
        <GradientStop Color="#007ACC" Offset="0" />
        <GradientStop Color="#0098FF" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientSuccessToGreen"
                         StartPoint="0%,0%"
                         EndPoint="100%,100%">
        <GradientStop Color="#10B981" Offset="0" />
        <GradientStop Color="#34D399" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientErrorToRed"
                         StartPoint="0%,0%"
                         EndPoint="100%,100%">
        <GradientStop Color="#EF5350" Offset="0" />
        <GradientStop Color="#EF9A9A" Offset="1" />
    </LinearGradientBrush>
    
    <LinearGradientBrush x:Key="GradientWarningToOrange"
                         StartPoint="0%,0%"
                         EndPoint="100%,100%">
        <GradientStop Color="#FFA726" Offset="0" />
        <GradientStop Color="#FFB74D" Offset="1" />
    </LinearGradientBrush>
    
    <!-- Radial Gradients -->
    <RadialGradientBrush x:Key="GradientRadialPrimary"
                         Center="0.5,0.5"
                         Radius="0.5">
        <GradientStop Color="#0098FF" Offset="0" />
        <GradientStop Color="#007ACC" Offset="1" />
    </RadialGradientBrush>
    
    <!-- Hover Effects -->
    <x:Double x:Key="HoverScaleTransform">1.05</x:Double>
    <x:Double x:Key="ActiveScaleTransform">0.95</x:Double>
    
    <!-- Focus Ring -->
    <Thickness x:Key="FocusRingThickness">2</Thickness>
    <x:String x:Key="FocusRingColor">#007ACC</x:String>
    
    <!-- Animation Keyframes -->
    <x:String x:Key="AnimationPulse">pulse</x:String>
    <x:String x:Key="AnimationFade">fade</x:String>
    <x:String x:Key="AnimationSlide">slide</x:String>
    <x:String x:Key="AnimationBounce">bounce</x:String>
    <x:String x:Key="AnimationSpin">spin</x:String>
</ResourceDictionary>

