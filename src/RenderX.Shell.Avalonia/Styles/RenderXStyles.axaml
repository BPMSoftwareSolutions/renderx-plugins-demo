<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Base RenderX Application Styles -->
    
    <!-- Include foundation styles first -->
    <StyleInclude Source="/Styles/ColorPalette.axaml"/>
    <StyleInclude Source="/Styles/Typography.axaml"/>
    <StyleInclude Source="/Styles/Elevation.axaml"/>
    <StyleInclude Source="/Styles/Animations.axaml"/>
    <StyleInclude Source="/Styles/Spacing.axaml"/>
    
    <!-- Include component-specific styles -->
    <StyleInclude Source="/Styles/Components/ComponentStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/ControlPanelStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/LibraryStyles.axaml"/>
    <StyleInclude Source="/Styles/Diagnostics/DiagnosticsStyles.axaml"/>
    <StyleInclude Source="/Styles/Diagnostics/InspectionStyles.axaml"/>
    
    <!-- Base RenderX Component Styles -->
    <!-- These match the CSS classes from the web version -->

    <!-- rx-button: Standard RenderX button -->
    <Style Selector="Button.rx-button">
        <Setter Property="Background" Value="{DynamicResource Blue.500}" />
        <Setter Property="Foreground" Value="{DynamicResource Text.Inverse}" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.rx-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource Blue.600}" />
    </Style>

    <Style Selector="Button.rx-button:pressed">
        <Setter Property="Background" Value="{DynamicResource Blue.700}" />
    </Style>

    <!-- rx-comp: Generic RenderX component wrapper -->
    <Style Selector="Border.rx-comp">
        <Setter Property="Background" Value="{DynamicResource Bg.Primary}" />
        <Setter Property="Padding" Value="8" />
        <Setter Property="Margin" Value="2" />
    </Style>

    <!-- rx-container: Container component -->
    <Style Selector="Border.rx-container">
        <Setter Property="Background" Value="{DynamicResource Gray.50}" />
        <Setter Property="BorderBrush" Value="{DynamicResource Border.Primary}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="4" />
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!-- rx-canvas: Canvas component -->
    <Style Selector="Canvas.rx-canvas">
        <Setter Property="Background" Value="White" />
        <Setter Property="ClipToBounds" Value="True" />
    </Style>

    <!-- rx-svg: SVG wrapper component -->
    <Style Selector="Panel.rx-svg">
        <Setter Property="ClipToBounds" Value="False" />
    </Style>

    <!-- rx-line: Line/connection component -->
    <Style Selector="Border.rx-line">
        <Setter Property="Background" Value="Transparent" />
    </Style>

    <!-- Utility classes for common patterns -->
    
    <!-- Text utilities -->
    <Style Selector="TextBlock.text-primary">
        <Setter Property="Foreground" Value="{DynamicResource Text.Primary}" />
    </Style>

    <Style Selector="TextBlock.text-secondary">
        <Setter Property="Foreground" Value="{DynamicResource Text.Secondary}" />
    </Style>
    
    <Style Selector="TextBlock.text-tertiary">
        <Setter Property="Foreground" Value="{DynamicResource Text.Tertiary}" />
    </Style>
    
    <Style Selector="TextBlock.text-light">
        <Setter Property="Foreground" Value="{DynamicResource Text.Light}" />
    </Style>

    <!-- Background utilities (for Border controls) -->
    <Style Selector="Border.bg-white">
        <Setter Property="Background" Value="{DynamicResource Bg.Primary}" />
    </Style>

    <Style Selector="Border.bg-gray-50">
        <Setter Property="Background" Value="{DynamicResource Gray.50}" />
    </Style>

    <Style Selector="Border.bg-gray-100">
        <Setter Property="Background" Value="{DynamicResource Gray.100}" />
    </Style>
    
    <Style Selector="Border.bg-gray-900">
        <Setter Property="Background" Value="{DynamicResource Gray.900}" />
    </Style>

    <!-- Border utilities -->
    <Style Selector="Border.border">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Border.Primary}" />
    </Style>
    
    <Style Selector="Border.border-error">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BorderBrush" Value="{DynamicResource Border.Error}" />
    </Style>

    <Style Selector="Border.rounded">
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style Selector="Border.rounded-lg">
        <Setter Property="CornerRadius" Value="8" />
    </Style>

    <!-- Spacing utilities (for Decorator controls like Border) -->
    <Style Selector="Border.p-2">
        <Setter Property="Padding" Value="8" />
    </Style>

    <Style Selector="Border.p-4">
        <Setter Property="Padding" Value="16" />
    </Style>

    <Style Selector="Control.m-2">
        <Setter Property="Margin" Value="8" />
    </Style>

    <Style Selector="Control.m-4">
        <Setter Property="Margin" Value="16" />
    </Style>

</Styles>
