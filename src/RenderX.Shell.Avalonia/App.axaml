<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:fluent="clr-namespace:Avalonia.Themes.Fluent;assembly=Avalonia.Themes.Fluent"
             xmlns:converters="using:RenderX.Shell.Avalonia.UI.Converters"
             x:Class="RenderX.Shell.Avalonia.App"
             RequestedThemeVariant="Dark">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <!-- Design Tokens - Single source of truth for all colors, typography, spacing -->
        <ResourceInclude Source="/Styles/DesignTokens.axaml"/>
      </ResourceDictionary.MergedDictionaries>
      <!-- Converters -->
      <converters:LogLevelColorConverter x:Key="LogLevelColorConverter"/>
    </ResourceDictionary>
  </Application.Resources>
  <Application.Styles>
    <fluent:FluentTheme/>
    <!-- RenderX base component styles -->
    <StyleInclude Source="/Styles/RenderXStyles.axaml"/>
    <!-- Component-specific styles -->
    <StyleInclude Source="/Styles/Components/ComponentStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/ControlPanelStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/LibraryStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/UICoreStyles.axaml"/>
    <StyleInclude Source="/Styles/Components/DigitalAssetsStyles.axaml"/>
    <!-- Animations and transitions -->
    <StyleInclude Source="/Styles/Animations.axaml"/>
    <StyleInclude Source="/Styles/Typography.axaml"/>
    <StyleInclude Source="/Styles/Spacing.axaml"/>
  </Application.Styles>
</Application>
