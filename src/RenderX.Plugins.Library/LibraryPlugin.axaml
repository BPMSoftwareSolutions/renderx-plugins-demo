<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Library.LibraryPlugin"
             Background="{DynamicResource Color.Background.Tertiary}">
    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top"
                Background="{DynamicResource Color.Background.Hover}"
                Padding="12">
            <StackPanel Spacing="8">
                <!-- Header with Title and AI Toggle -->
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Grid.Column="0" Spacing="4">
                        <!-- Title matching web: ðŸ§© Component Library -->
                        <TextBlock Text="ðŸ§© Component Library"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource Color.Text.Primary}" />
                        <!-- Subtitle matching web: Drag components to the canvas -->
                        <TextBlock Text="Drag components to the canvas"
                                   FontSize="11"
                                   Foreground="{DynamicResource Color.Text.Secondary}" />
                    </StackPanel>
                    <!-- AI Chat Toggle Button -->
                    <Button Grid.Column="1"
                            x:Name="AIToggleButton"
                            Content="ðŸ¤– AI Chat"
                            Classes="ai-toggle-button"
                            FontSize="11"
                            Padding="8,4"
                            VerticalAlignment="Top"
                            Click="OnAIChatToggle" />
                </Grid>

                <!-- AI Availability Hint -->
                <Border x:Name="AIAvailabilityHint"
                        Background="#fef3c7"
                        BorderThickness="1"
                        BorderBrush="#fcd34d"
                        CornerRadius="4"
                        Padding="8"
                        IsVisible="False">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="ðŸ’¡"
                                   FontSize="12"
                                   VerticalAlignment="Center" />
                        <TextBlock Text="AI is not configured. Configure API key to enable AI component generation."
                                   FontSize="10"
                                   Foreground="#92400e"
                                   TextWrapping="Wrap"
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
        
        <!-- Components List -->
        <ScrollViewer DockPanel.Dock="Top">
            <ItemsControl x:Name="ComponentsItemsControl" Padding="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ComponentBorder"
                                Background="{DynamicResource Color.Background.Primary}"
                                BorderBrush="{DynamicResource Color.Border.Secondary}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,4"
                                PointerPressed="OnComponentPointerPressed"
                                DoubleTapped="OnComponentDoubleClick"
                                Cursor="Hand">
                            <StackPanel Spacing="4">
                                <!-- Component with emoji icon -->
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="{Binding Icon}" 
                                               FontSize="20"
                                               VerticalAlignment="Center" />
                                    <TextBlock Text="{Binding Name}" 
                                               FontWeight="Bold" 
                                               FontSize="14"
                                               VerticalAlignment="Center"
                                               Foreground="{DynamicResource Color.Text.Primary}" />
                                </StackPanel>
                                <TextBlock Text="{Binding Category}" 
                                           FontSize="11" 
                                           Foreground="{DynamicResource Color.Text.Secondary}" />
                                <TextBlock Text="{Binding Description}" 
                                           FontSize="10" 
                                           Foreground="{DynamicResource Color.Text.Tertiary}"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>

