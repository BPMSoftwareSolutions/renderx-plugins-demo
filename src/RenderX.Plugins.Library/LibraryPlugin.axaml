<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Library.LibraryPlugin"
             Background="#F5F5F5">
    <DockPanel>
        <!-- Header -->
        <TextBlock DockPanel.Dock="Top" 
                   Text="Component Library" 
                   FontSize="14" 
                   FontWeight="Bold"
                   Padding="12,8"
                   Background="#E8E8E8"
                   Foreground="#333333" />
        
        <!-- Components List -->
        <ScrollViewer DockPanel.Dock="Top">
            <ItemsControl x:Name="ComponentsItemsControl" Padding="8">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="ComponentBorder"
                                Background="White"
                                BorderBrush="#CCCCCC"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,4"
                                PointerPressed="OnComponentPointerPressed"
                                DoubleTapped="OnComponentDoubleClick"
                                Cursor="Hand">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{Binding Name}" 
                                           FontWeight="Bold" 
                                           Foreground="#333333" />
                                <TextBlock Text="{Binding Category}" 
                                           FontSize="11" 
                                           Foreground="#666666" />
                                <TextBlock Text="{Binding Description}" 
                                           FontSize="10" 
                                           Foreground="#999999"
                                           TextWrapping="Wrap" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</UserControl>

