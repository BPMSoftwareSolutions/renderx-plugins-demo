<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Library.ConfigStatusUI"
             Background="Transparent">
    <Border Background="{DynamicResource Color.Background.Secondary}"
            BorderThickness="1"
            BorderBrush="{DynamicResource Color.Border.Primary}"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="⚙️"
                           FontSize="14"
                           VerticalAlignment="Center" />
                <Ellipse x:Name="StatusDot"
                         Width="12" Height="12"
                         Fill="#10b981"
                         VerticalAlignment="Center" />
                <!-- H4 equivalent: Title with header styling -->
                <TextBlock x:Name="StatusText"
                           Text="Ready"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}"
                           VerticalAlignment="Center" />
            </StackPanel>
            <!-- Paragraph with strong (bold) text -->
            <TextBlock x:Name="DetailText"
                       FontSize="11"
                       Foreground="#666"
                       TextWrapping="Wrap">
                <Run Text="Configuration loaded successfully" />
                <Run Text=" Using model: " />
                <Run x:Name="ModelText" Text="gpt-4" FontWeight="Bold" />
            </TextBlock>
        </StackPanel>
    </Border>
</UserControl>

