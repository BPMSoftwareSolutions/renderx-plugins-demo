<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Library.LibraryPreview"
             Background="White">
    <Border BorderThickness="1"
            BorderBrush="#E0E0E0"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="12">
            <!-- Preview Title -->
            <TextBlock x:Name="PreviewTitle"
                       Text="Component Preview"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="#333" />

            <!-- Preview Area -->
            <Border x:Name="PreviewArea"
                    Background="#F9F9F9"
                    BorderThickness="1"
                    BorderBrush="#E0E0E0"
                    CornerRadius="4"
                    MinHeight="200"
                    Padding="12">
                <TextBlock Text="No preview available"
                           FontSize="12"
                           Foreground="#999"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <!-- Component Info -->
            <StackPanel Spacing="4">
                <TextBlock Text="Component Name"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="#333" />
                <TextBlock Text="Component description"
                           FontSize="11"
                           Foreground="#666"
                           TextWrapping="Wrap" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Content="Insert"
                        Padding="12,6"
                        Background="#007ACC"
                        Foreground="White"
                        FontSize="11"
                        Click="OnInsertClick" />
                <Button Content="Edit"
                        Padding="12,6"
                        Background="#E0E0E0"
                        Foreground="#333"
                        FontSize="11"
                        Click="OnEditClick" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

