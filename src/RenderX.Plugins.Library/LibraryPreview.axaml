<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Library.LibraryPreview"
             Background="{DynamicResource Color.Background.Primary}">
    <UserControl.Styles>
        <Style Selector="Button.action-button">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.action-button:pointerover">
            <Setter Property="RenderTransform">
                <TransformGroup>
                    <TranslateTransform Y="-1"/>
                </TransformGroup>
            </Setter>
        </Style>
    </UserControl.Styles>
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource Color.Border.Primary}"
            CornerRadius="8"
            Padding="12"
            PointerPressed="OnPreviewPointerPressed"
            PointerMoved="OnPreviewPointerMoved"
            PointerReleased="OnPreviewPointerReleased">
        <StackPanel Spacing="12">
            <!-- Preview Title -->
            <TextBlock x:Name="PreviewTitle"
                       Text="Component Preview"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="{DynamicResource Color.Border.Primary}" />

            <!-- Preview Area -->
            <Border x:Name="PreviewArea"
                    Background="{DynamicResource Color.Background.Secondary}"
                    BorderThickness="1"
                    BorderBrush="{DynamicResource Color.Border.Primary}"
                    CornerRadius="4"
                    MinHeight="200"
                    Padding="12">
                <TextBlock Text="No preview available"
                           FontSize="12"
                           Foreground="#999"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center" />
            </Border>

            <!-- Component Info -->
            <StackPanel Spacing="4">
                <TextBlock Text="Component Name"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Border.Primary}" />
                <TextBlock Text="Component description"
                           FontSize="11"
                           Foreground="#666"
                           TextWrapping="Wrap" />
            </StackPanel>

            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button Classes="action-button"
                        Content="Insert"
                        Padding="12,6"
                        Background="{DynamicResource Color.Accent.Primary}"
                        Foreground="{DynamicResource Color.Background.Primary}"
                        FontSize="11"
                        Click="OnInsertClick" />
                <Button Classes="action-button"
                        Content="Edit"
                        Padding="12,6"
                        Background="{DynamicResource Color.Border.Primary}"
                        Foreground="{DynamicResource Color.Background.Primary}"
                        FontSize="11"
                        Click="OnEditClick" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

