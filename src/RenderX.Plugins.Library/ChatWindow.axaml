<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Library.ChatWindow"
             Background="{DynamicResource Color.Background.Primary}">
    <Grid RowDefinitions="*,Auto">
        <!-- Messages Area -->
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MessagesItemsControl"
                          Padding="12"
                          Background="{DynamicResource Color.Background.Primary}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="Transparent" Margin="0,8">
                            <StackPanel Spacing="4">
                                <TextBlock Text="{Binding Author}"
                                           FontSize="11"
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource Color.Border.Primary}" />
                                <Border Background="{DynamicResource Color.Background.Tertiary}"
                                        BorderThickness="1"
                                        BorderBrush="{DynamicResource Color.Border.Primary}"
                                        CornerRadius="4"
                                        Padding="8">
                                    <TextBlock Text="{Binding Content}"
                                               FontSize="11"
                                               Foreground="#666"
                                               TextWrapping="Wrap" />
                                </Border>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input Area -->
        <Border Grid.Row="1"
                Background="{DynamicResource Color.Background.Primary}"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource Color.Border.Primary}"
                Padding="12">
            <Grid ColumnDefinitions="*,Auto">
                <TextBox Grid.Column="0"
                         x:Name="MessageInput"
                         Watermark="Type a message..."
                         FontSize="11"
                         Padding="6,4"
                         BorderThickness="1"
                         BorderBrush="{DynamicResource Color.Border.Secondary}"
                         AcceptsReturn="False" />
                <Button Grid.Column="1"
                        Content="Send"
                        Margin="8,0,0,0"
                        Padding="12,4"
                        Background="{DynamicResource Color.Accent.Primary}"
                        Foreground="{DynamicResource Color.Background.Primary}"
                        FontSize="11"
                        Click="OnSendClick" />
            </Grid>
        </Border>
    </Grid>
</UserControl>

