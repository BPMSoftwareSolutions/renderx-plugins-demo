<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Header.HeaderThemeButtonView"
             Background="Transparent">
    <Button x:Name="ThemeButton"
            Click="OnThemeButtonClick"
            Padding="12,6"
            Background="{DynamicResource Color.Accent.Primary}"
            Foreground="{DynamicResource Color.Text.Inverse}"
            VerticalAlignment="Center"
            ToolTip.Tip="Toggle Theme" />
</UserControl>

