<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Header.HeaderStatusIndicator"
             Background="Transparent">
    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
        <Ellipse x:Name="StatusDot" Width="8" Height="8" Fill="#10b981" />
        <TextBlock x:Name="StatusText" Text="Ready" Foreground="#cccccc" VerticalAlignment="Center" />
    </StackPanel>
</UserControl>

