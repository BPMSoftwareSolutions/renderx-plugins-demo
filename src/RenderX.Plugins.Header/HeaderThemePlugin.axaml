<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.Header.HeaderThemePlugin"
             Background="Transparent">

    <UserControl.Styles>
        <Style Selector="Button.theme-button">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.theme-button:pointerover">
            <Setter Property="RenderTransform">
                <TransformGroup>
                    <TranslateTransform Y="-1"/>
                </TransformGroup>
            </Setter>
        </Style>
    </UserControl.Styles>

    <Border Padding="16,0">
        <Button Classes="theme-button"
                x:Name="ThemeToggleButton"
                Content="ðŸŒ™ Dark"
                Click="OnThemeToggleClick"
                Padding="12,6"
                Background="#6C757D"
                Foreground="{DynamicResource Color.Background.Primary}"
                VerticalAlignment="Center" />
    </Border>
</UserControl>

