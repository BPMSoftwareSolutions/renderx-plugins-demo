<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RenderX.Plugins.ControlPanel"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="600"
             x:Class="RenderX.Plugins.ControlPanel.ControlPanelControl"
             x:CompileBindings="False"
             Background="White"
             BorderThickness="1"
             BorderBrush="#E0E0E0">

    <Grid RowDefinitions="Auto,*">
        <!-- Control Panel Header -->
        <Border Grid.Row="0"
                Background="#F5F5F5"
                BorderThickness="0,0,0,1"
                BorderBrush="#E0E0E0"
                Padding="12">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Properties"
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"/>
                <TextBlock Name="SelectedComponentText"
                           Text="(none selected)"
                           FontSize="12"
                           Foreground="Gray"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Control Panel Content -->
        <Border Grid.Row="1"
                Background="White"
                Padding="12">
            <ScrollViewer>
                <StackPanel Spacing="12">
                    <!-- Properties Section -->
                    <Border Background="#F9F9F9"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Component Properties"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#333"/>

                            <!-- Property Grid -->
                            <ItemsControl Name="PropertiesItemsControl"
                                          Background="White">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                BorderThickness="0,0,0,1"
                                                BorderBrush="#E0E0E0"
                                                Padding="0,8">
                                            <Grid ColumnDefinitions="120,*">
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Key}"
                                                           FontSize="11"
                                                           VerticalAlignment="Center"
                                                           Foreground="#666"/>
                                                <TextBox Grid.Column="1"
                                                         Text="{Binding Value}"
                                                         FontSize="11"
                                                         Margin="8,0,0,0"
                                                         Padding="6,4"
                                                         BorderThickness="1"
                                                         BorderBrush="#D0D0D0"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Interactions Section -->
                    <Border Background="#F9F9F9"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Interactions"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#333"/>

                            <!-- Interaction Buttons -->
                            <ItemsControl Name="InteractionsItemsControl"
                                          Background="White">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding Name}"
                                                Click="OnInteractionButtonClicked"
                                                Padding="8,6"
                                                Margin="0,4"
                                                Background="#2196F3"
                                                Foreground="White"
                                                FontSize="11"
                                                CornerRadius="4"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- CSS Classes Section -->
                    <Border Background="#F9F9F9"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel Spacing="8">
                            <TextBlock Text="CSS Classes"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#333"/>

                            <!-- CSS Classes Input -->
                            <TextBox Name="CssClassesInput"
                                     Watermark="Enter CSS classes..."
                                     FontSize="11"
                                     Padding="6,4"
                                     BorderThickness="1"
                                     BorderBrush="#D0D0D0"
                                     AcceptsReturn="False"/>

                            <Button Content="Apply CSS Classes"
                                    Click="OnApplyCssClassesClicked"
                                    Padding="8,6"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    FontSize="11"
                                    CornerRadius="4"/>
                        </StackPanel>
                    </Border>

                    <!-- Status Section -->
                    <Border Background="#F9F9F9"
                            BorderThickness="1"
                            BorderBrush="#E0E0E0"
                            CornerRadius="4"
                            Padding="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="Status"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#333"/>
                            <TextBlock Name="StatusText"
                                       Text="No component selected"
                                       FontSize="11"
                                       Foreground="Gray"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>

