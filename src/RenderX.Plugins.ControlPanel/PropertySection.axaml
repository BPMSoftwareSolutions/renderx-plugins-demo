<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.ControlPanel.PropertySection"
             Background="Transparent">
    <Border Background="{DynamicResource Color.Background.Secondary}"
            BorderThickness="1"
            BorderBrush="{DynamicResource Color.Border.Primary}"
            CornerRadius="4"
            Padding="12">
        <StackPanel Spacing="8">
            <Button x:Name="SectionToggle"
                    Background="Transparent"
                    Foreground="{DynamicResource Color.Border.Primary}"
                    Padding="0"
                    HorizontalAlignment="Left"
                    Click="OnToggleClick">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock x:Name="ToggleIcon" Text="â–¼" FontSize="12" />
                    <TextBlock x:Name="SectionTitle"
                               Text="Properties"
                               FontSize="12"
                               FontWeight="Bold" />
                </StackPanel>
            </Button>
            
            <StackPanel x:Name="ContentPanel" Spacing="8">
                <ItemsControl x:Name="PropertiesItemsControl"
                              Background="{DynamicResource Color.Background.Primary}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{DynamicResource Color.Background.Primary}"
                                    BorderThickness="0,0,0,1"
                                    BorderBrush="{DynamicResource Color.Border.Primary}"
                                    Padding="0,8">
                                <Grid ColumnDefinitions="120,*">
                                    <TextBlock Grid.Column="0"
                                               Text="{Binding Key}"
                                               FontSize="11"
                                               VerticalAlignment="Center"
                                               Foreground="#666"/>
                                    <TextBox Grid.Column="1"
                                             Text="{Binding Value}"
                                             FontSize="11"
                                             Margin="8,0,0,0"
                                             Padding="6,4"
                                             BorderThickness="1"
                                             BorderBrush="{DynamicResource Color.Border.Secondary}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

