<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="RenderX.Plugins.ControlPanel.ValidationErrorDisplay"
             Background="Transparent">
    <Border x:Name="ErrorBorder"
            Background="#FFEBEE"
            BorderThickness="1"
            BorderBrush="{DynamicResource Color.Error}"
            CornerRadius="4"
            Padding="12"
            IsVisible="False">
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBlock Text="⚠️" FontSize="16" />
                <TextBlock Text="Validation Error"
                           FontSize="12"
                           FontWeight="Bold"
                           Foreground="{DynamicResource Color.Error}"
                           VerticalAlignment="Center" />
            </StackPanel>
            <TextBlock Text="An error occurred"
                       FontSize="11"
                       Foreground="{DynamicResource Color.Error}"
                       TextWrapping="Wrap" />
        </StackPanel>
    </Border>
</UserControl>

