{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Theme Configuration Schema",
  "description": "Schema for defining visual themes with colors, typography, and styling",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this theme"
    },
    "name": {
      "type": "string",
      "description": "Human-readable name for this theme"
    },
    "description": {
      "type": "string",
      "description": "Description of the theme's visual style"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the theme"
    },
    "colors": {
      "type": "object",
      "description": "Color palette definitions",
      "properties": {
        "primary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "secondary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "background": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "surface": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "text": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "textSecondary": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "border": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "accent": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "success": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "warning": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "error": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "custom": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z][a-zA-Z0-9_]*$": {
              "type": "string",
              "pattern": "^#[0-9a-fA-F]{6}$"
            }
          }
        }
      },
      "required": ["primary", "background", "text"]
    },
    "typography": {
      "type": "object",
      "description": "Typography definitions",
      "properties": {
        "fontFamily": {
          "type": "string",
          "description": "Default font family"
        },
        "fontSize": {
          "type": "object",
          "properties": {
            "xs": { "type": "number" },
            "sm": { "type": "number" },
            "base": { "type": "number" },
            "lg": { "type": "number" },
            "xl": { "type": "number" },
            "xxl": { "type": "number" }
          }
        },
        "fontWeight": {
          "type": "object",
          "properties": {
            "light": { "type": "number" },
            "normal": { "type": "number" },
            "medium": { "type": "number" },
            "semibold": { "type": "number" },
            "bold": { "type": "number" }
          }
        },
        "lineHeight": {
          "type": "object",
          "properties": {
            "tight": { "type": "number" },
            "normal": { "type": "number" },
            "relaxed": { "type": "number" }
          }
        }
      }
    },
    "spacing": {
      "type": "object",
      "description": "Spacing scale definitions",
      "properties": {
        "xs": { "type": "number" },
        "sm": { "type": "number" },
        "md": { "type": "number" },
        "lg": { "type": "number" },
        "xl": { "type": "number" },
        "xxl": { "type": "number" }
      }
    },
    "borders": {
      "type": "object",
      "description": "Border style definitions",
      "properties": {
        "radius": {
          "type": "object",
          "properties": {
            "none": { "type": "number" },
            "sm": { "type": "number" },
            "md": { "type": "number" },
            "lg": { "type": "number" },
            "full": { "type": "number" }
          }
        },
        "width": {
          "type": "object",
          "properties": {
            "thin": { "type": "number" },
            "normal": { "type": "number" },
            "thick": { "type": "number" }
          }
        }
      }
    },
    "shadows": {
      "type": "object",
      "description": "Shadow effect definitions",
      "properties": {
        "none": { "type": "string" },
        "sm": { "type": "string" },
        "md": { "type": "string" },
        "lg": { "type": "string" },
        "xl": { "type": "string" }
      }
    },
    "effects": {
      "type": "object",
      "description": "Visual effect definitions",
      "properties": {
        "opacity": {
          "type": "object",
          "properties": {
            "disabled": { "type": "number" },
            "muted": { "type": "number" },
            "subtle": { "type": "number" }
          }
        },
        "blur": {
          "type": "object",
          "properties": {
            "sm": { "type": "number" },
            "md": { "type": "number" },
            "lg": { "type": "number" }
          }
        }
      }
    }
  },
  "required": ["id", "name", "version", "colors"]
}
