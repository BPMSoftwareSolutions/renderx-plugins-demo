{
  "name": "renderx-plugins-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/manifest-tools"
  ],
  "scripts": {
    "build:packages": "echo skip-local-package-build",
    "dev": "npm run build:packages && npm run pre:manifests && vite",
    "build": "npm run build:packages && npm run pre:manifests && vite build",
    "dev:artifacts": "node scripts/copy-artifacts-to-public.js && vite",
    "artifacts:build:integrity": "node scripts/build-artifacts.js --srcRoot=. --outDir=dist/artifacts --integrity",
    "artifacts:build:signed": "node scripts/build-artifacts.js --srcRoot=. --outDir=dist/artifacts --integrity --sign",
    "artifacts:watch": "node scripts/build-artifacts.js --srcRoot=. --outDir=dist/artifacts --integrity --watch",
    "artifacts:hash": "node scripts/hash-artifacts.js dist/artifacts",
    "artifacts:validate": "node scripts/validate-artifacts.js",
    "artifacts:pack": "node scripts/pack-artifacts.js --dir=dist/artifacts --out=dist/packages",
    "artifacts:validate:strict": "node -e \"process.env.RENDERX_VALIDATION_STRICT='1'; require('./scripts/validate-artifacts.js')\"",
    "artifacts:verify:signature": "node scripts/verify-artifact-signature.js",
    "public-api:hash": "node scripts/hash-public-api.js",
    "public-api:check": "node scripts/hash-public-api.js --check",
    "artifacts:ci": "npm run artifacts:build:signed && npm run artifacts:validate:strict && npm run artifacts:verify:signature && npm run public-api:check && npm test && npm run artifacts:pack",
    "validate:public-api": "node scripts/validate-public-api.js",
    "preview": "vite preview",
    "pre:manifests": "npm run sync:json-components && node scripts/sync-json-sequences.js && node scripts/generate-interaction-manifest.js && node scripts/generate-topics-manifest.js && node scripts/generate-layout-manifest.js && node scripts/aggregate-plugins.js && node scripts/sync-plugins.js",
    "sync:json-components": "node scripts/sync-json-components.js",
    "export:gif": "node scripts/export-svg-to-gif.js",
    "export:server": "node scripts/export-server.js",
    "export:setup": "python -m ensurepip --upgrade && python -m pip install --user playwright && python -m playwright install chromium",
    "lint": "eslint .",
    "lint:ui": "eslint plugins/**/ui",
    "lint:fix": "eslint . --fix",
    "test": "npm run build:packages && vitest run",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
    "e2e": "playwright test",
    "ci": "npm run lint && npm run build:packages && npm run pre:manifests && npm test && npm run e2e"
  },
  "dependencies": {
    "@renderx-plugins/header": "^0.1.1",
    "@renderx-plugins/host-sdk": "^0.1.0",
    "@renderx-plugins/manifest-tools": "^0.1.2",
    "gif.js.optimized": "^1.0.1",
    "musical-conductor": "^1.4.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "chokidar": "^3.6.0",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.55.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
