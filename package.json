{
  "name": "renderx-plugins-demo",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
  "dev": "npm run pre:manifests && vite",
  "build": "npm run pre:manifests && vite build",
  "dev:artifacts": "node scripts/copy-artifacts-to-public.js && vite",
  "artifacts:build:integrity": "node scripts/build-artifacts.js --srcRoot=. --outDir=dist/artifacts --integrity",
  "artifacts:hash": "node scripts/hash-artifacts.js dist/artifacts",
  "preview": "vite preview",
    "pre:manifests": "npm run sync:json-components && node scripts/sync-json-sequences.js && node scripts/generate-interaction-manifest.js && node scripts/generate-topics-manifest.js && node scripts/generate-layout-manifest.js && node scripts/sync-plugins.js",
    "sync:json-components": "node scripts/sync-json-components.js",
    "export:gif": "node scripts/export-svg-to-gif.js",
    "export:server": "node scripts/export-server.js",
    "export:setup": "python -m ensurepip --upgrade && python -m pip install --user playwright && python -m playwright install chromium",
    "lint": "eslint .",
    "lint:ui": "eslint plugins/**/ui",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:cov": "vitest run --coverage",
  "ci": "npm run lint && npm run pre:manifests && npm test"
  },
  "dependencies": {
    "@renderx/host-sdk": "workspace:*",
    "gif.js.optimized": "^1.0.1",
    "musical-conductor": "^1.4.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}
