{
  "name": "renderx-plugins-digital-assets",
  "version": "1.0.0",
  "description": "Digital assets and SVG animations for RenderX plugins",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build:svgs": "node scripts/generate-integrated-svgs.js --all",
    "test:server": "node tests/server.js",
    "test:cypress": "cypress run",
    "test:cypress:open": "cypress open",
    "test:svg": "npm run test:server & sleep 2 && npm run test:cypress && pkill -f 'node tests/server.js'",
    "example": "npm run build && node dist/example.js",
    "graph-to-svg": "npm run build && node dist/cli.js",
    "generate-samples": "npm run build && node dist/sample-generator.js"
  },
  "devDependencies": {
    "cypress": "^13.17.0",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "jsdom": "^27.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "assets/**/*.{js,svg}",
      "!**/node_modules/**"
    ]
  },
  "keywords": [
    "svg",
    "animation",
    "renderx",
    "digital-assets"
  ],
  "author": "BPM Software Solutions",
  "license": "MIT"
}
