{
  "name": "musical-conductor",
  "version": "1.0.0",
  "description": "MusicalConductor Communication System with Jest Testing",
  "type": "module",
  "main": "dist/modules/communication/index.js",
  "types": "dist/modules/communication/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/modules/communication/index.js",
      "types": "./dist/modules/communication/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "modules/**/*",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:performance": "jest --testPathPattern=performance",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:clear": "jest --clearCache",
    "lint": "eslint modules tests --ext .ts,.tsx",
    "lint:fix": "eslint modules tests --ext .ts,.tsx --fix",
    "build": "tsc",
    "build:clean": "rimraf dist && npm run build",
    "prepare": "npm run build:clean",
    "prepublishOnly": "npm run build:clean",
    "dev": "cross-env NODE_ENV=development MC_DEV=1 tsc --watch",
    "knowledge": "node -r ts-node/register tools/cli/knowledge-cli.ts",
    "knowledge:export": "npm run knowledge -- export",
    "knowledge:import": "npm run knowledge -- import",
    "knowledge:merge": "npm run knowledge -- merge",
    "knowledge:validate": "npm run knowledge -- validate",
    "knowledge:status": "npm run knowledge -- status",
    "knowledge:diff": "npm run knowledge -- diff",
    "knowledge:help": "npm run knowledge -- --help",
    "demo": "node -r ts-node/register tools/cli/demo.ts",
    "demo:export": "npm run demo -- export",
    "demo:import": "npm run demo -- import",
    "demo:status": "npm run demo -- status",
    "demo:validate": "npm run demo -- validate",
    "shortcut": "npm run knowledge -- shortcut",
    "shortcuts": "npm run knowledge -- shortcuts",
    "shortcut-demo": "node -r ts-node/register tools/cli/shortcut-demo.ts",
    "queue": "npm run knowledge -- queue",
    "queue-demo": "node -r ts-node/register tools/cli/queue-demo.ts"
  },
  "keywords": [
    "event-bus",
    "musical-conductor",
    "spa-architecture",
    "plugin-system",
    "typescript"
  ],
  "author": "BPM Software Solutions",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-extended": "^4.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "rimraf": "^5.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0"
  }
}
