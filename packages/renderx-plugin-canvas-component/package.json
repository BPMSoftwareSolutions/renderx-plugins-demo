{
  "name": "@renderx-plugins/canvas-component",
  "version": "0.1.0-rc.1",
  "publishConfig": { "access": "public" },
  "files": ["dist", "json-sequences"],
  "type": "module",
  "keywords": ["renderx-plugin"],
  "scripts": {
    "build": "tsup src/index.ts src/symphonies/**/*.ts --splitting --format esm --out-dir dist --clean --external react,react-dom",
    "test": "vitest --run --config vitest.config.ts"
  },
  "exports": {
    ".": { "import": "./dist/index.js" },
    "./symphonies/*.ts": { "import": "./dist/symphonies/*.js" },
    "./symphonies/*": { "import": "./dist/symphonies/*" }
  },
  "renderx": {
    "plugins": [ { "id": "CanvasComponentPlugin", "runtime": { "module": "@renderx-plugins/canvas-component", "export": "register" } } ],
    "sequences": ["json-sequences"]
  },
  "devDependencies": {
    "@renderx-plugins/manifest-tools": "^0.1.2"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  }
}
