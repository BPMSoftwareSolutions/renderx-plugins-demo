{
  "version": "1.0.0",
  "description": "Control Panel Configuration Schema - defines how properties are rendered",
  "defaultSections": [
    {
      "id": "content",
      "title": "ğŸ“ CONTENT",
      "icon": "ğŸ“",
      "order": 1,
      "collapsible": true,
      "defaultExpanded": true
    },
    {
      "id": "layout",
      "title": "ğŸ“ LAYOUT",
      "icon": "ğŸ“",
      "order": 2,
      "collapsible": true,
      "defaultExpanded": true
    },
    {
      "id": "styling",
      "title": "ğŸ¨ STYLING",
      "icon": "ğŸ¨",
      "order": 3,
      "collapsible": true,
      "defaultExpanded": true
    },
    {
      "id": "behavior",
      "title": "âš¡ BEHAVIOR",
      "icon": "âš¡",
      "order": 4,
      "collapsible": true,
      "defaultExpanded": false
    },
    {
      "id": "classes",
      "title": "ğŸ·ï¸ CSS CLASSES",
      "icon": "ğŸ·ï¸",
      "order": 5,
      "collapsible": true,
      "defaultExpanded": false,
      "special": "classes"
    }
  ],
  "fieldTypes": {
    "text": {
      "component": "TextInput",
      "validation": ["string"],
      "props": {
        "placeholder": "Enter text..."
      }
    },
    "number": {
      "component": "NumberInput", 
      "validation": ["number"],
      "props": {
        "min": 0,
        "step": 1
      }
    },
    "select": {
      "component": "SelectInput",
      "validation": ["enum"],
      "props": {
        "placeholder": "Choose option..."
      }
    },
    "checkbox": {
      "component": "CheckboxInput",
      "validation": ["boolean"]
    },
    "color": {
      "component": "ColorInput",
      "validation": ["string", "color"],
      "props": {
        "format": "hex"
      }
    },
    "range": {
      "component": "RangeInput",
      "validation": ["number"],
      "props": {
        "min": 0,
        "max": 100,
        "step": 1
      }
    },
    "textarea": {
      "component": "TextareaInput",
      "validation": ["string"],
      "props": {
        "rows": 3,
        "placeholder": "Enter text..."
      }
    },
    "file": {
      "component": "FileInput",
      "validation": ["string"],
      "props": {
        "accept": "image/*"
      }
    }
  },
  "componentTypeOverrides": {
    "button": {
      "sections": {
        "content": {
          "fields": ["content", "variant", "size", "disabled"]
        },
        "styling": {
          "fields": ["bg-color", "text-color", "border-radius", "font-size"]
        }
      }
    },
    "input": {
      "sections": {
        "content": {
          "fields": ["placeholder", "value", "type", "required", "disabled"]
        },
        "validation": {
          "title": "ğŸ” Validation",
          "fields": ["minLength", "maxLength", "pattern"]
        }
      }
    }
  }
}
