{
  "name": "@renderx-plugins/control-panel",
  "version": "0.1.0-rc.9",
  "private": false,
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "files": [
    "dist",
    "src",
    "json-sequences",
    "json-topics"
  ],
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./observer.store": {
      "types": "./dist/state/observer.store.d.ts",
      "import": "./dist/state/observer.store.js"
    },
    "./index.css": "./dist/index.css",
    "./symphonies/*": "./dist/symphonies/*",
    "./symphonies/*.ts": "./dist/symphonies/*.js"
  },
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@renderx-plugins/host-sdk": "^1.0.6",
    "@renderx-plugins/manifest-tools": "^0.1.2",
    "musical-conductor": "^1.4.5"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@microsoft/eslint-formatter-sarif": "^3.1.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.5.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/ui": "^3.2.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^27.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public",
    "tag": "rc"
  },
  "renderx": {
    "manifest": "dist/plugin-manifest.json",
    "plugins": [
      {
        "id": "ControlPanelPlugin",
        "ui": {
          "slot": "controlPanel",
          "module": "@renderx-plugins/control-panel",
          "export": "ControlPanel"
        },
        "runtime": {
          "module": "@renderx-plugins/control-panel",
          "export": "register"
        }
      }
    ],
    "sequences": [
      "json-sequences"
    ],
    "topics": [
      "json-topics"
    ]
  }
}

