{
  "name": "@renderx-plugins/header",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "description": "RenderX Header UI plugin (externalized package)",
  "keywords": [
    "renderx-plugin",
    "renderx",
    "plugin",
    "header"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts src/symphonies/ui/ui.symphony.ts src/symphonies/ui/ui.stage-crew.ts --format esm --sourcemap --injectStyle --external react,react-dom,@renderx/host-sdk --out-dir dist && node ./scripts/copy-css.cjs",
    "prepublishOnly": "npm run build"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./symphonies/ui/*": {
      "import": "./dist/symphonies/ui/*.js"
    }
  },
  "files": [
    "dist",
    "json-sequences",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "./src/**/*.css",
    "./dist/**/*.css"
  ],
  "peerDependencies": {
    "@renderx/host-sdk": "*",
    "react": ">=18",
    "react-dom": ">=18"
  },
  "renderx": {
    "plugins": [
      {
        "id": "HeaderTitlePlugin",
        "ui": {
          "slot": "headerLeft",
          "module": "@renderx-plugins/header",
          "export": "HeaderTitle"
        }
      },
      {
        "id": "HeaderControlsPlugin",
        "ui": {
          "slot": "headerCenter",
          "module": "@renderx-plugins/header",
          "export": "HeaderControls"
        }
      },
      {
        "id": "HeaderThemePlugin",
        "ui": {
          "slot": "headerRight",
          "module": "@renderx-plugins/header",
          "export": "HeaderThemeToggle"
        }
      }
    ],
    "sequences": [
      "json-sequences"
    ]
  },
  "devDependencies": {
    "tsup": "^8.5.0"
  }
}
