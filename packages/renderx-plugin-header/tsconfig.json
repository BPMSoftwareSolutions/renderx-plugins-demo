{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2020",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@setup/*": ["tests/setup/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "**/*.spec.*", "**/tests/**"]
}

