<Window x:Class="MarkdownViewer.SequenceEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="Sequence Editor"
        Height="900"
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0"
                                 Mode="PrimaryMid"
                                 Padding="16"
                                 materialDesign:ElevationAssist.Elevation="Dp4">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="FileEditOutline"
                                           Width="32"
                                           Height="32"
                                           VerticalAlignment="Center"
                                           Margin="0,0,16,0"/>
                    <TextBlock x:Name="TxtTitle"
                             Text="JSON Sequence Editor"
                             VerticalAlignment="Center"
                             FontSize="22"
                             FontWeight="Medium"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                          DockPanel.Dock="Right"
                          HorizontalAlignment="Right">
                    <Button x:Name="BtnSave"
                          Style="{StaticResource MaterialDesignRaisedButton}"
                          ToolTip="Save Changes (Ctrl+S)"
                          Click="BtnSave_Click"
                          Margin="8,0"
                          Height="36"
                          Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave"
                                                   Width="20"
                                                   Height="20"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                            <TextBlock Text="SAVE"
                                     VerticalAlignment="Center"
                                     FontWeight="Medium"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnRefresh"
                          Style="{StaticResource MaterialDesignIconButton}"
                          ToolTip="Refresh Preview"
                          Click="BtnRefresh_Click"
                          Margin="8,0">
                        <materialDesign:PackIcon Kind="Refresh" Width="24" Height="24"/>
                    </Button>

                    <Button x:Name="BtnClose"
                          Style="{StaticResource MaterialDesignIconButton}"
                          ToolTip="Close"
                          Click="BtnClose_Click"
                          Margin="8,0">
                        <materialDesign:PackIcon Kind="Close" Width="24" Height="24"/>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Editor -->
            <materialDesign:Card Grid.Column="0"
                               Margin="4"
                               materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Editor Header -->
                    <Border Grid.Row="0"
                          Background="{DynamicResource MaterialDesignChipBackground}"
                          Padding="16,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Mermaid Diagram Editor"
                                     FontSize="16"
                                     FontWeight="SemiBold"/>

                            <ComboBox x:Name="CmbDiagramSelector"
                                    Grid.Column="1"
                                    Width="300"
                                    materialDesign:HintAssist.Hint="Select Diagram"
                                    Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                    SelectionChanged="CmbDiagramSelector_SelectionChanged">
                                <ComboBoxItem Content="Main Sequence Diagram" Tag="diagram"/>
                                <ComboBoxItem Content="User Story Diagram" Tag="userStory.diagram"/>
                            </ComboBox>
                        </Grid>
                    </Border>

                    <!-- Editor Info -->
                    <Border Grid.Row="1"
                          Background="{DynamicResource MaterialDesignDivider}"
                          Padding="16,8">
                        <TextBlock x:Name="TxtEditorInfo"
                                 Text="Editing: Main Sequence Diagram"
                                 FontSize="12"
                                 Opacity="0.8"/>
                    </Border>

                    <!-- Code Editor -->
                    <Grid Grid.Row="2" Margin="8">
                        <TextBox x:Name="TxtDiagramCode"
                               AcceptsReturn="True"
                               TextWrapping="NoWrap"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               FontFamily="Consolas"
                               FontSize="14"
                               Padding="12"
                               TextChanged="TxtDiagramCode_TextChanged"
                               materialDesign:HintAssist.Hint="Enter Mermaid diagram code here..."
                               Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1"
                        Width="4"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Stretch"
                        Background="{DynamicResource MaterialDesignDivider}"/>

            <!-- Right Panel - Preview -->
            <materialDesign:Card Grid.Column="2"
                               Margin="4"
                               materialDesign:ElevationAssist.Elevation="Dp2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Preview Header -->
                    <Border Grid.Row="0"
                          Background="{DynamicResource MaterialDesignChipBackground}"
                          Padding="16,12">
                        <TextBlock Text="Live Preview"
                                 FontSize="16"
                                 FontWeight="SemiBold"/>
                    </Border>

                    <!-- Preview Area -->
                    <Grid Grid.Row="1">
                        <!-- WebView2 for rendering diagram -->
                        <wv2:WebView2 x:Name="PreviewWebView"
                                    Margin="8"/>

                        <!-- Loading Indicator -->
                        <ProgressBar x:Name="LoadingProgress"
                                   Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   Value="0"
                                   IsIndeterminate="True"
                                   Width="50"
                                   Height="50"
                                   Visibility="Collapsed"/>

                        <!-- Preview Message -->
                        <StackPanel x:Name="PreviewMessage"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="Collapsed">
                            <materialDesign:PackIcon Kind="ImageBrokenVariant"
                                                   Width="80"
                                                   Height="80"
                                                   Foreground="{DynamicResource PrimaryHueMidBrush}"
                                                   Opacity="0.3"
                                                   HorizontalAlignment="Center"/>
                            <TextBlock x:Name="TxtPreviewMessage"
                                     Text="Enter diagram code to see preview"
                                     FontSize="16"
                                     Opacity="0.5"
                                     TextAlignment="Center"
                                     Margin="0,16,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="2"
                                 Mode="PrimaryLight"
                                 Padding="16,8"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon x:Name="StatusIcon"
                                           Kind="CheckCircle"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"
                                           Foreground="Green"/>
                    <TextBlock x:Name="TxtStatus"
                             Text="Ready"
                             VerticalAlignment="Center"
                             FontSize="12"/>
                </StackPanel>

                <TextBlock Grid.Column="1"
                         x:Name="TxtFilePath"
                         Text=""
                         VerticalAlignment="Center"
                         FontSize="11"
                         Opacity="0.7"
                         Margin="16,0"
                         TextTrimming="CharacterEllipsis"/>

                <TextBlock Grid.Column="2"
                         x:Name="TxtLineCount"
                         Text="Lines: 0"
                         VerticalAlignment="Center"
                         FontSize="12"
                         Opacity="0.7"/>
            </Grid>
        </materialDesign:ColorZone>
    </Grid>
</Window>
