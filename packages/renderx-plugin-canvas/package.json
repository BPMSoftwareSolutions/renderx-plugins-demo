{
  "name": "@renderx-plugins/canvas",
  "version": "0.1.0-rc.0",
  "publishConfig": { "access": "public" },
  "files": ["dist"],
  "type": "module",
  "keywords": ["renderx-plugin"],
  "scripts": {
    "build": "tsup src/index.ts --format esm --out-dir dist --clean --external react,react-dom",
    "test": "vitest --run --config vitest.config.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "renderx": {
    "plugins": [
      {
        "id": "CanvasPlugin",
        "ui": { "slot": "canvas", "module": "@renderx-plugins/canvas", "export": "CanvasPage" },
        "runtime": { "module": "@renderx-plugins/canvas", "export": "register" }
      }
    ]
  },
  "devDependencies": {
    "@renderx-plugins/manifest-tools": "^0.1.2"
  },
  "peerDependencies": {
    "react": ">=18 <20",
    "react-dom": ">=18 <20"
  }
}
