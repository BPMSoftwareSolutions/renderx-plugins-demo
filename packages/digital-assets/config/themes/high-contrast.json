{
  "id": "high-contrast",
  "name": "High Contrast Accessibility Theme",
  "description": "Maximum contrast theme designed for accessibility, visual impairments, and high-visibility requirements",
  "version": "1.0.0",
  "colors": {
    "primary": "#000000",
    "secondary": "#333333",
    "background": "#ffffff",
    "surface": "#f0f0f0",
    "text": "#000000",
    "textSecondary": "#333333",
    "border": "#000000",
    "accent": "#0066cc",
    "success": "#006600",
    "warning": "#cc6600",
    "error": "#cc0000",
    "custom": {
      "strongBlack": "#000000",
      "strongBlackBorder": "#000000",
      "pureWhite": "#ffffff",
      "pureWhiteBorder": "#000000",
      "accessibleBlue": "#0066cc",
      "accessibleBlueBorder": "#003366",
      "safeGreen": "#006600",
      "safeGreenBorder": "#003300",
      "warningAmber": "#cc6600",
      "warningAmberBorder": "#663300",
      "alertRed": "#cc0000",
      "alertRedBorder": "#660000",
      "neutralGray": "#666666",
      "neutralGrayBorder": "#333333",
      "shadowBlack": "#000000"
    }
  },
  "typography": {
    "fontFamily": "'Arial Black', Arial, 'Helvetica Neue', Helvetica, sans-serif",
    "fontSize": {
      "xs": 12,
      "sm": 14,
      "base": 16,
      "lg": 18,
      "xl": 22,
      "xxl": 32
    },
    "fontWeight": {
      "light": 400,
      "normal": 600,
      "medium": 700,
      "semibold": 800,
      "bold": 900
    },
    "lineHeight": {
      "tight": 1.3,
      "normal": 1.6,
      "relaxed": 2.0
    }
  },
  "spacing": {
    "xs": 6,
    "sm": 12,
    "md": 20,
    "lg": 28,
    "xl": 36,
    "xxl": 52
  },
  "borders": {
    "radius": {
      "none": 0,
      "sm": 0,
      "md": 2,
      "lg": 4,
      "full": 9999
    },
    "width": {
      "thin": 2,
      "normal": 3,
      "thick": 4
    }
  },
  "shadows": {
    "none": "none",
    "sm": "0 2px 4px rgba(0, 0, 0, 0.8)",
    "md": "0 4px 8px rgba(0, 0, 0, 0.9)",
    "lg": "0 6px 12px rgba(0, 0, 0, 1.0)",
    "xl": "0 8px 16px rgba(0, 0, 0, 1.0)"
  },
  "effects": {
    "opacity": {
      "disabled": 0.5,
      "muted": 0.7,
      "subtle": 0.9
    },
    "blur": {
      "sm": 0,
      "md": 0,
      "lg": 0
    }
  },
  "accessibility": {
    "description": "High contrast theme optimized for users with visual impairments, low vision, or working in bright environments",
    "features": {
      "contrastRatio": "Exceeds WCAG AAA standards with 7:1+ contrast ratios",
      "colorBlindness": "Uses patterns and shapes in addition to color coding",
      "fontSize": "Larger base font sizes for improved readability",
      "borders": "Thick, high-contrast borders for clear element separation",
      "shadows": "Strong shadows for enhanced depth perception"
    },
    "useCases": [
      "Accessibility compliance",
      "Visual impairment support",
      "Bright environment viewing",
      "High-visibility presentations",
      "Medical/safety applications"
    ],
    "guidelines": {
      "colorOnly": "Never rely on color alone to convey information",
      "patterns": "Use patterns, textures, or shapes for differentiation",
      "spacing": "Increased spacing for easier target selection",
      "focus": "Clear focus indicators for keyboard navigation"
    }
  }
}
