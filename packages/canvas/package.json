{
  "name": "@renderx-plugins/canvas",
  "version": "0.1.0-rc.4",
  "type": "module",
  "description": "Canvas rendering plugin for RenderX",
  "keywords": [
    "renderx-plugin",
    "canvas"
  ],
  "license": "MIT",
  "author": "BPM Software Solutions",
  "repository": {
    "type": "git",
    "url": "https://github.com/BPMSoftwareSolutions/renderx-plugins-demo",
    "directory": "packages/canvas"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --out-dir dist --clean --external react,react-dom,@renderx-plugins/host-sdk,@renderx-plugins/manifest-tools",
    "test": "vitest --run --config vitest.config.ts",
    "lint": "echo 'Linting passed - no linter configured yet'",
    "type-check": "tsc --noEmit"
  },
  "renderx": {
    "plugins": [
      {
        "id": "CanvasPlugin",
        "ui": {
          "slot": "canvas",
          "module": "@renderx-plugins/canvas",
          "export": "CanvasPage"
        },
        "runtime": {
          "module": "@renderx-plugins/canvas",
          "export": "register"
        }
      }
    ]
  },
  "dependencies": {
    "@renderx-plugins/host-sdk": "workspace:*"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "jsdom": "^27.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=18"
  }
}
