{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "public-api.ts",
    "pluginManifest.ts",
    "conductor.ts",
    "EventRouter.ts",
    "interactionManifest.ts",
    "feature-flags.ts",
    "component-mapper.ts",
    "jsonComponent.mapper.ts",
    "types.ts",
    "types/**/*.d.ts",
    "core/**/*.ts",
    "core/**/*.tsx"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
