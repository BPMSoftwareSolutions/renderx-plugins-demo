{
  "pluginId": "CanvasComponentPastePlugin",
  "id": "canvas-component-paste-symphony",
  "name": "Canvas Component Paste",
  "topicMapping": {
    "routeToBase": true
  },
  "movements": [
    {
      "id": "paste-from-clipboard",
      "name": "Paste from Clipboard",
      "beats": [
        {
          "beat": 1,
          "event": "canvas:component:paste:clipboard",
          "title": "Read from Clipboard",
          "dynamics": "mf",
          "handler": "readFromClipboard",
          "timing": "immediate",
          "kind": "io"
        },
        {
          "beat": 2,
          "event": "canvas:component:paste:deserialize",
          "title": "Deserialize Component Data",
          "dynamics": "mf",
          "handler": "deserializeComponentData",
          "timing": "immediate",
          "kind": "pure"
        },
        {
          "beat": 3,
          "event": "canvas:component:paste:position",
          "title": "Calculate Paste Position",
          "dynamics": "mf",
          "handler": "calculatePastePosition",
          "timing": "immediate",
          "kind": "pure"
        },
        {
          "beat": 4,
          "event": "canvas:component:paste:create",
          "title": "Create Pasted Component",
          "dynamics": "mf",
          "handler": "createPastedComponent",
          "timing": "immediate",
          "kind": "stage-crew"
        },
        {
          "beat": 5,
          "event": "canvas:component:paste:notify",
          "title": "Notify Paste Complete",
          "dynamics": "mf",
          "handler": "notifyPasteComplete",
          "timing": "immediate",
          "kind": "pure"
        }
      ]
    }
  ]
}

