{
  "name": "@slo-shape/dashboard",
  "version": "1.0.0",
  "description": "Generic, reusable React dashboard for visualizing SLI/SLO/SLA + self-healing activity",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && rollup -c",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "dev": "tsc --watch"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "rollup": "^3.10.0",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "slo",
    "sli",
    "sla",
    "monitoring",
    "dashboard",
    "telemetry",
    "observability",
    "renderx-plugin"
  ],
  "renderx": {
    "plugins": [
      {
        "id": "slo-dashboard",
        "ui": { "slot": "dashboard", "module": "@slo-shape/dashboard", "export": "Dashboard" },
        "runtime": { "module": "@slo-shape/dashboard", "export": "register" }
      }
    ]
  },
  "author": "BPM Software Solutions",
  "license": "MIT"
}
