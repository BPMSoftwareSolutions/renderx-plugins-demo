{
  "name": "@slo-shape/dashboard",
  "version": "1.0.0",
  "description": "Generic, reusable React dashboard for visualizing SLI/SLO/SLA + self-healing activity",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run verify:markdown-governance && tsc && tsup src/index.ts src/ui/SLODashboardPage.tsx src/hooks/useErrorBudget.ts --format esm --sourcemap --injectStyle --external react,react-dom,@renderx-plugins/host-sdk --out-dir dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "dev": "tsc --watch",
    "generate:all": "node scripts/generate-markdown.js all",
    "generate:context-tree-audit": "node scripts/generate-markdown.js context-tree-audit",
    "generate:session-summary": "node scripts/generate-markdown.js session-summary",
    "generate:next-session-handoff": "node scripts/generate-markdown.js next-session-handoff",
    "generate:directory-readme": "node scripts/generate-markdown.js directory-readme",
    "generate:master-index": "node scripts/generate-markdown.js master-index",
    "verify:markdown-governance": "node scripts/verify-markdown-governance.js",
    "verify:markdown-governance:fix": "node scripts/verify-markdown-governance.js --fix"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "tsup": "^6.7.0",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "slo",
    "sli",
    "sla",
    "monitoring",
    "dashboard",
    "telemetry",
    "observability",
    "renderx-plugin"
  ],
  "renderx": {
    "plugins": [
      {
        "id": "slo-dashboard",
        "ui": { "slot": "dashboard", "module": "@slo-shape/dashboard", "export": "Dashboard" },
        "runtime": { "module": "@slo-shape/dashboard", "export": "register" }
      }
    ]
  },
  "author": "BPM Software Solutions",
  "license": "MIT"
}
